#pragma once

#include <string>
#include "event.hpp"
#include "window.hpp"

namespace Core{

  class Scene {
  public:
    Scene(const std::string name) : name(name) {}
    virtual  ~Scene() = default;
    virtual void OnEvent(Event& event){}
    virtual void OnUpdate(){}
    virtual void OnRender(){}
    std::string GetName(){return name;}
  private:
    std::string name;
  };
}
